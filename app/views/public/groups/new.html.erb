<div class="container">
    <div class="row" style="height: 90px;">
        <div class="col">
            <h2 style="line-height: 90px;">グループ作成</h2>
        </div>
    </div>
    <%= form_with model: @group, url: groups_path, method: :post do |f| %>
        <div class="form-group row">
            <div class="col-md-2">
            </div>
            <%= f.label :name, "グループ名", class: "col-md-3 col-lg-2 col-form-label" %>
            <div class="col-md-7 col-lg-8">
                <%= f.text_field :name %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
            </div>
            <%= f.label :group_image, "グループ画像", class: "col-md-3 col-lg-2 col-form-label" %>
            <div class="col-md-7 col-lg-8">
                <%= f.file_field :group_image %>
            </div>
        </div>
        
        <div class="form-gorup row">
            <div class="col-3">
            </div>
            <div class="col-9">
            <%= f.submit "作成", class: "btn btn-outline-success" %>
        </div>
    <% end %>
</div>