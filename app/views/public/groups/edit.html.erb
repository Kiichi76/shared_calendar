<div class="container">
    <div class="row">
        <div class="col">
            <h2>グループ編集</h2>
        </div>
    </div>
    </br>
    <%= form_with model: @group, url: group_path(@group), method: :patch do |f| %>
        <div class="form-group row">
            <div class="col-md-2">
            </div>
            <%= f.label :name, "グループ名", class: "col-md-3 col-lg-2 col-form-label" %>
            <div class="col-md-7 col-lg-8">
                <%= f.text_field :name %>
            </div>
        </div>
 
        <div class="form-group row">
            <div class="col-md-2">
            </div>
            <%= f.label :group_image, "グループ画像", class: "col-md-3 col-lg-2 col-form-label" %>
            <div class="col-md-7 col-lg-8">
                <%= f.file_field :group_image %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
            </div>
            <div class="col-9">
                <%= f.submit "変更", class: "btn btn-outline-success" %>
            </div>
        </div>
    <% end %>
</div>