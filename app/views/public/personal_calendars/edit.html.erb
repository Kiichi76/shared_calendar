<div class="container">
    <%= form_with model: @calendar, url: personal_calendar_path(@calendar), method: :patch do |f| %>
        <% if @calendar.errors.any? %>
            <h4>エラーが発生しました</h4>
            <ul>
                <% @calendar.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
        
        <div class="form-group row">
			<div class="col-md-2">
			</div>
            <%= f.label :title, class: "col-md-3 col-lg-2 col-form-label" %>
			<div class="col-md-7 col-lg-8">
                <%= f.text_field :title %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
            </div>
            <%= f.label :body, class: "col-md-3 col-lg-2 col-form-label" %>
			<div class="col-md-7 col-lg-8">
                <%= f.text_area :body %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
            </div>
            <%= f.label :start_time, class: "col-md-3 col-lg-2 col-form-label" %>
            <div class="col-md-7 col-lg-8">
                <%= f.datetime_select :start_time %>
            </div>
        </div>
        <div class="form-group row">
			<div class="col-3">
			</div>
			<div class="col-9">
                <%= f.submit "変更" %>
            </div>
        </div>
    <% end %>
</div>