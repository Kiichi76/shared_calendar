<div class="container">
  <div class="row" style="height: 90px;">
    <div class="col">
      <h2 style="line-height: 90px;">ログイン</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="alert">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :email, "メールアドレス", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :password, "パスワード", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group row">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>
    <div class="form-group row">
      <div class="col-2">
			</div>
      <div class="col-10">
        <%= f.submit "ログイン", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
  </br>
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-10">
      <%= render "public/shared/links" %>
    </div>
</div>