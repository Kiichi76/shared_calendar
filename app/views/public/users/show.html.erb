<div class="container">
	<div class="row">
		<div class="col-0 col-md-3"> 
		</div>
		<div class="col-12 col-md-9">
			<div class="text-center text-md-left">
				<% if @user.profile_image.attached? %>
					<%= image_tag @user.profile_image, size: "120x120" %>
				<% else %>
					<%= image_tag "no_image", size: "120x120" %>
				<% end %>
			</div>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">表示名</p>	
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= @user.handle %>
			</p>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">フォロー数</p>
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= link_to @user.followings.count, user_followings_path(@user)  %>
			</p>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">フォロワー数</p>
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= link_to @user.followers.count, user_followers_path(@user) %>
			</p>
		</div>

		
		<% if @user != current_user %>		
			<% if current_user.following?(@user) %>
				<div class="col-6">
					<%= link_to "フォロー解除", user_relationships_path(@user), method: :delete, class: "btn btn-success" %>
				</div>
			<% else %>
				<div class="col-6">
					<%= link_to "フォロー" , user_relationships_path(@user), method: :post, class: "btn btn-primary" %>
				</div>
			<% end %>
		<% else %>
			<div class="col-0 col-md-3 col-lg-2">
			</div>
			<div class="col-12 col-md-3 col-lg-2">
				<p class="text-center text-md-left">名前</p>
			</div>
			<div class="col-12 col-md-4 col-lg-8">
				<p class="text-center text-md-left">
					<%= @user.name %>
				</p>
			</div>

			<div class="col-0 col-md-3 col-lg-2">
			</div>
			<div class="col-12 col-md-3 col-lg-2">
				<p class="text-center text-md-left">メールアドレス</p>
			</div>
			<div class="col-12 col-md-4 col-lg-8">
				<p class="text-center text-md-left">
					<%= @user.email %>
				</p>
			</div>

			<div class="col-0 col-md-3 col-lg-2">
			</div>
			<div class="col-12 col-md-2 col-lg-2">
				<%= link_to "編集", edit_user_path(@user), class: "btn btn-primary" %>
			</div>
			<div class="col-12 col-md-7 col-lg-8">
				<%= link_to "退会", user_path(@user), method: :delete, "date-confirm" => "本当に退会しますか?", class: "btn btn-danger" %>
			</div>
		<% end %>
	</div>
</div>