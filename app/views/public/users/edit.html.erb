<div class="container">
	<div class="row">
		<div class="col">
			<h2>プロフィール編集画面</h2>
		</div>
	</div>
	</br>
	<%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
		<div class="form-group row">
			<div class="col-md-2">
			</div>
			<%= f.label :profile_image, "プロフィール画像", class: "col-md-3 col-lg-2 col-form-label" %>
			<div class="col-md-7 col-lg-8">
				<%= f.file_field :profile_image %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-md-2">
			</div>
			<%= f.label :handle, "表示名", class: "col-md-3 col-lg-2 col-form-label" %>
			<div class="col-md-7 col-lg-8">
				<%= f.text_field :handle %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-md-2">
			</div>
			<%= f.label :name, "名前", class: "col-md-3 col-lg-2 col-form-label" %>
			<div class="col-md-7 col-lg-8">
				<%= f.text_field :name %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-3">
			</div>
			<div class="col-9">
				<%= f.submit "変更", class: "btn btn-primary" %>
			</div>
		</div>
	<% end %>
</div>