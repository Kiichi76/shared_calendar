<div class="container">
  <div class="row">
    <div class="col">
      <h2>ユーザー登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="alert">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :name, "名前", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.text_field :name %>
      </div> 
    </div>

    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :email, "メールアドレス", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :profile_image, "プロフィール画像", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.file_field :profile_image %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :handle, "表示名", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.text_field :handle %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :password, "パスワード(6文字以上)", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="form-group row">
			<div class="col-2">
			</div>
      <div class="col-10">
        <%= f.submit "登録", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
  </br>
  <div class="row">
    <div class="col-1 col-md-2">
    </div>
    <div class="col-11 col-md-10">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
