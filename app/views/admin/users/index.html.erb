<div class="container">
    <div class="row" style="height: 90px;">
        <div class="col">
            <h2 style="line-height: 90px;">ユーザー 一覧</h2>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="col-1">
                <th class="col-3">プロフィール画像</th>
                <th class="col-3">名前</th>
                <th class="col-3">表示名</th>
                <th class="col-2"></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td></td>
                    <td>
                        <% if user.profile_image.attached? %>
                            <%= image_tag user.profile_image, size: "80x80" %>
                        <% else %>
                            <%= image_tag "no_image.jpg", size: "80x80" %>
                        <% end %>
                    </td>
                    <td><%= user.name %></td>
                    <td>
                        <%= link_to admin_user_path(user) do %>
                            <%= user.handle %>
                        <% end %>
                    </td>
                    <td>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>