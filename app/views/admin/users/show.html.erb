<div class="container">
	<div class="row">
		<div class="col">
			<h2>ユーザー詳細</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-0 col-md-3"> 
		</div>
		<div class="col-12 col-md-9">
			<div class="text-center text-md-left">
				<% if @user.profile_image.attached? %>
					<%= image_tag @user.profile_image, size: "120x120" %>
				<% else %>
					<%= image_tag "no_image.jpg", size: "120x120" %>
				<% end %>
			</div>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">表示名</p>	
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= @user.handle %>
			</p>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">フォロー数</p>
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= link_to @user.followings.count, admin_user_followings_path(@user)  %>
			</p>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">フォロワー数</p>
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= link_to @user.followers.count, admin_user_followers_path(@user) %>
			</p>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">名前</p>
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= @user.name %>
			</p>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">メールアドレス</p>
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= @user.email %>
			</p>
		</div>

		<div class="col-0 col-md-3 col-lg-2">
		</div>
		<div class="col-12 col-md-3 col-lg-2">
			<p class="text-center text-md-left">ユーザーID</p>
		</div>
		<div class="col-12 col-md-4 col-lg-8">
			<p class="text-center text-md-left">
				<%= @user.id %>
			</p>
		</div>

		<div class="col-0 col-md-4 col-lg-3">
		</div>
		<div class="col-12 col-md-8 col-lg-9">
			<p class="text-center text-md-left"><%= link_to "退会させる", admin_user_path(@user), method: :delete, "date-confirm" => "本当に退会しますか?", class: "btn btn-outline-success" %></p>
		</div>
	</div>
</div>