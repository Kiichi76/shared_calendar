<div class="container">
  <div class="row">
    <div class="col">
      <h2>管理者登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="alert">
      <%= render "admin/shared/error_messages", resource: resource %>
    </div>

    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :email, "メールアドレス", class: "col-md-3 col-lg-3 col-form-label" %> 
      <div class="col-md-7 col-lg-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-2">
      </div>
      <%= f.label :password, "パスワード(6文字以上)", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

      <div class="form-group row">
        <div class="col-md-2">
        </div>
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-md-3 col-lg-3 col-form-label" %>
      <div class="col-md-7 col-lg-7">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-2">
      </div>
      <div class="col-10">
      <%= f.submit "管理者登録", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
  </br>
  <div class="row">
    <div class="col-1 col-md-2">
    </div>
    <div class="col-11 col-md-10">
      <%= render "admin/shared/links" %>
    </div>
  </div>

</div>

