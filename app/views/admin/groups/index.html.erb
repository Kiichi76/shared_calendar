<div class="container">
    <div class="row" style="height: 90px;">
        <div class="col-12">
            <h2 style="line-height: 90px;">グループ一覧</h2>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th class="col-1"></th>
                <th class="col-3">グループ画像</th>
                <th class="col-3">グループ名</th>
                <th class="col-3">メンバー数</th>
                <th class="col-2"></th>
            </tr>
        </thead>
        <tbody>
            <% @groups.each do |group| %>
                <tr>
                    <td></td>
                    <td>
                        <% if group.group_image.attached? %>
                            <%= image_tag group.group_image, size:"50x50" %>
                        <% else %>
                            <%= image_tag "no_image", size:"50x50" %>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to admin_group_path(group) do %>
                            <%= group.name %>
                        <% end %>
                    </td>
                    <td>
                        <p><%= group.member_count(group.group_users.count)  %></p>
                    </td>
                    <td>
                        <%= link_to "削除", admin_group_path(group), method: :delete, class: "btn btn-outline-success"%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>